									"pm.test('Status code is 200', function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"// Clear tokens on successful logout",
									"pm.environment.unset('access_token');",
									"pm.environment.unset('refresh_token');"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
