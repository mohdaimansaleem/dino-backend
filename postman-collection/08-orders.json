	"item": [
		{
			"name": "Get Orders",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/orders?page=1&page_size=10&venue_id={{venue_id}}",
					"host": ["{{base_url}}"],
					"path": ["orders"],
					"query": [
						{
							"key": "page",
							"value": "1"
						},
						{
							"key": "page_size",
							"value": "10"
						},
						{
							"key": "venue_id",
							"value": "{{venue_id}}"
						}
					]
				}
			}
		},
		{
			"name": "Create Order",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 201) {",
							"    const response = pm.response.json();",
							"    pm.collectionVariables.set('order_id', response.data.id);",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"venue_id\": \"{{venue_id}}\",\n  \"customer_id\": \"demo_customer_123\",\n  \"order_type\": \"dine_in\",\n  \"table_id\": \"{{table_id}}\",\n  \"items\": [\n    {\n      \"menu_item_id\": \"{{menu_item_id}}\",\n      \"quantity\": 2,\n      \"special_instructions\": \"Extra hot, no sugar\"\n    }\n  ],\n  \"special_instructions\": \"Please serve quickly, customer is in a hurry\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/orders",
					"host": ["{{base_url}}"],
					"path": ["orders"]
				}
			}
		},
		{
			"name": "Get Order by ID",
			"request": {
				"method": "GET",
				"header": [],
