{
	"name": "ðŸ›’ Public Ordering (QR)",
	"item": [
		{
			"name": "Access Menu via QR",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/orders/public/qr/sample_qr_code_here",
					"host": ["{{base_url}}"],
					"path": ["orders", "public", "qr", "sample_qr_code_here"]
				}
			}
		},
		{
			"name": "Check Venue Status",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/orders/public/venue/{{venue_id}}/status",
					"host": ["{{base_url}}"],
					"path": ["orders", "public", "venue", "{{venue_id}}", "status"]
				}
			}
		},
		{
			"name": "Validate Order",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"venue_id\": \"{{venue_id}}\",\n  \"table_id\": \"{{table_id}}\",\n  \"items\": [\n    {\n      \"menu_item_id\": \"{{menu_item_id}}\",\n      \"quantity\": 2\n    }\n  ]\n}"
				},
				"url": {
					"raw": "{{base_url}}/orders/public/validate-order",
					"host": ["{{base_url}}"],
					"path": ["orders", "public", "validate-order"]
				}
			}
		},
		{
			"name": "Create Public Order",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 201) {",
							"    const response = pm.response.json();",
							"    pm.collectionVariables.set('public_order_id', response.order_id);",
							"    pm.collectionVariables.set('customer_id', response.customer_id);",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"venue_id\": \"{{venue_id}}\",\n  \"table_id\": \"{{table_id}}\",\n  \"customer\": {\n    \"name\": \"John Doe\",\n    \"phone\": \"+919876543213\",\n    \"email\": \"john.doe@example.com\"\n  },\n  \"items\": [\n    {\n      \"menu_item_id\": \"{{menu_item_id}}\",\n      \"quantity\": 2,\n      \"special_instructions\": \"Extra hot\"\n    }\n  ],\n  \"order_type\": \"qr_scan\",\n  \"special_instructions\": \"Table service please\",\n  \"estimated_guests\": 2\n}"
				},
				"url": {
					"raw": "{{base_url}}/orders/public/create-order",
					"host": ["{{base_url}}"],
					"path": ["orders", "public", "create-order"]
				}
			}
		},
		{
			"name": "Track Order Status",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/orders/public/{{public_order_id}}/status",
					"host": ["{{base_url}}"],
					"path": ["orders", "public", "{{public_order_id}}", "status"]
				}
			}
		},
		{
			"name": "Get Order Receipt",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/orders/public/{{public_order_id}}/receipt",
					"host": ["{{base_url}}"],
					"path": ["orders", "public", "{{public_order_id}}", "receipt"]
				}
			}
		},
		{
			"name": "Submit Order Feedback",
			"request": {
				"method": "POST",
				"header": [],
				"url": {
					"raw": "{{base_url}}/orders/public/{{public_order_id}}/feedback?rating=5&feedback=Excellent service and food quality!",
					"host": ["{{base_url}}"],
					"path": ["orders", "public", "{{public_order_id}}", "feedback"],
					"query": [
						{
							"key": "rating",
							"value": "5"
						},
						{
							"key": "feedback",
							"value": "Excellent service and food quality!"
						}
					]
				}
			}
		}
	]
}